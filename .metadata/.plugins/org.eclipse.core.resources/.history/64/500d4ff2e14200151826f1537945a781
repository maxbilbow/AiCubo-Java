package rmx.engine;

import javax.vecmath.Matrix4f;
import javax.vecmath.Vector3f;

public class Transform {
	protected Matrix4f transform;
	
	public Vector3f position() {
		return new Vector3f(
				this.transform.m30,
				this.transform.m31,
				this.transform.m32
				);
	}
	
	public void setPosition(Vector3f position) {
		this.transform.m30 = position.x;
		this.transform.m31 = position.y;
		this.transform.m32 = position.z;
	}
}
