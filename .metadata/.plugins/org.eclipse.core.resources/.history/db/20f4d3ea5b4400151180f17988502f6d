package rmx.engine;


public class PhysicsBody extends NodeComponent {

	float mass = 1;
	public float getMass() {
		return mass;
	}
	
	public float mass() {
		float mass = this.mass;
		for (Node child : getNode().getChildren()){
			if (child.physicsBody() != null)
				mass += child.physicsBody().getMass();
		}
		return mass;
	}
	
	public void setMass(float mass) {
		this.mass = mass;
	}

	
}
