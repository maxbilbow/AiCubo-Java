package rmx.engine;



import rmx.RMXObject;

public class Scene extends RMXObject {
	
	protected static class node {
        Scene scene;
        node next;
        node prev;

        node(node prev, Scene element, node next) {
            this.scene = element;
            this.next = next;
            this.prev = prev;
        }
        
        node() {
            this.scene = null;
            this.next = new node();
            this.prev = null;
        }
        
        node(Scene element) {
            this.scene = element;
            this.next = new node();
            this.prev = null;
        }
        node(node prev, Scene element) {
            this.scene = element;
            this.next = new node();
            this.prev = prev;
        }
    }
	
	static node current = new node();
	
	public Scene() {
		if (current.scene == null)
			current.scene = this;
	}
	
//	private static Scene current;
	public static Scene getCurrent() {
		if (current.scene != null)
			return current.scene;
		else
			return new Scene();
	}
	
	public void makeCurrent() {
		current = this;
	}
	
	public void update() {
		
	}
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
