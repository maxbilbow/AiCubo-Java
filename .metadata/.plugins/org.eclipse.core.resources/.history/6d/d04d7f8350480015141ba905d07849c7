package click.rmx.engine.behaviours;

import click.rmx.engine.Behaviour;
import click.rmx.engine.math.Matrix4;
import click.rmx.engine.math.Vector3;

public class SpriteBehaviour extends Behaviour {

	@Override
	public void update() {
		// TODO Auto-generated method stub
		
	}
	
	public void jump() {
		this.getNode().transform.move("y:10");
	}
	
	public void applyForce (string direction, float force) {
	if (message == ApplyForce) {
		String[] options = ((String) args).split(":");
		float force = Float.parseFloat(options[1]);
		Matrix4 m = this.getNode().transform.localMatrix();
		switch (options[0]) {
		case "forward":
			this.applyForce(force, m.forward(), Vector3.Zero);
			break;
		case "left":
			this.applyForce(force, m.up(), Vector3.Zero);
			break;
		case "up":
			this.applyForce(force, m.left(), Vector3.Zero);
			break;
		default:
			throw new IllegalArgumentException("\"" + message + "\" not recognised");
		}
	}
	
}