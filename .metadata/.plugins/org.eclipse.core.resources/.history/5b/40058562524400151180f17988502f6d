package rmx.gl;

import javax.vecmath.Vector2f;

import org.lwjgl.glfw.GLFWCursorPosCallback;

import rmx.engine.Node;

public class CursorCallback extends GLFWCursorPosCallback {
//	void center();
//	void MouseButton(int button, int state, int x, int y);
//	void MouseMotion(int x, int y);
//	void mouseFree(int x, int y);
	
	private static CursorCallback singleton = new CursorCallback();
	    private CursorCallback() {    }
	    public static CursorCallback getInstance() {
	    	return singleton;
	    }
	    
	private Vector2f delta = new Vector2f();
	private double xpos ,ypos;
	private boolean firstLoad = true;
	@Override
	public void invoke(long window, double xpos, double ypos) {
		if (firstLoad) {
			this.xpos = xpos;
			this.ypos = ypos;
			firstLoad = false;
			return;
		} else {
			delta.x = (float) (xpos - this.xpos);
			delta.y = (float) (ypos - this.ypos);
			delta.normalize();
			this.xpos = xpos;
			this.ypos = ypos;
			Node.getCurrent().broadcastMessage("move","yaw:"+delta.x);
			Node.getCurrent().broadcastMessage("move","pitch:"+delta.y);
		}
		
		
	}
}
