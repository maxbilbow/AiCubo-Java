package click.rmx.engine;

import static org.lwjgl.opengl.GL11.*;
import static org.lwjgl.opengl.GL.*;

import click.rmx.engine.math.Vector4;

public class LightSource extends NodeComponent {
	
	Vector4 color = new Vector4(0.5f,0.5f,0.5f,1);
	public void shine() {
		glShadeModel(GL_SMOOTH);
		glMaterialfv(GL_FRONT, GL_SPECULAR, color.getBuffer());				// sets specular material color
		glMaterialf(GL_FRONT, GL_SHININESS, 50.0f);					// sets shininess
		
		glLightfv(GL_LIGHT0, GL_POSITION, getNode().transform.position().getBuffer());				// sets light position
		glLightfv(GL_LIGHT0, GL_SPECULAR, color.getBuffer());				// sets specular light to white
//		glLightfv(GL_LIGHT0, GL_DIFFUSE, color.getBuffer());					// sets diffuse light to white
//		glLightModelfv(GL_LIGHT_MODEL_AMBIENT, color.getBuffer());		// global ambient light 
		
		glEnable(GL_LIGHTING);										// enables lighting
		glEnable(GL_LIGHT0);										// enables light0
		
		glEnable(GL_COLOR_MATERIAL);								// enables opengl to use glColor3f to define material color
//		glColorMaterial(GL_FRONT, GL_AMBIENT_AND_DIFFUSE);
	}
}
