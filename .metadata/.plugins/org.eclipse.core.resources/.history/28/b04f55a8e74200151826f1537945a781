package rmx.gl;

import rmx.engine.GameController;
import org.lwjgl.opengl.*;
public class GameView extends AGameView {
	
	protected GameView() {	
		
	}
	private static GameView singleton;
	
	public static GameView getInstance() {
		if(singleton == null) {
			  synchronized(GameView.class) {
		    	 if(singleton == null) {
		    	   singleton = new GameView();
		       }
		     }
		  }
		  return singleton;
	}
	
	public static void main(String[] args) {
    	SharedLibraryLoader.load();
        new GameView().run();
    }

	@Override
	protected void updateGameLogic() {
		 GameController.getInstance().update();
	}

	@Override
	protected void renderScene() {
		ARBDrawBuffers.glDrawBuffersARB(1);
		
	}

}
